@model UserManagement.Models.User

<div class="container mt-4">
    <h2 class="text-danger">Delete User</h2>
    <p>Are you sure you want to delete this user?</p>
    <div class="border p-3 mb-3">
        <p><strong>@Model.Forename @Model.Surname</strong></p>
        <p>@Model.Email</p>
    </div>
    <form asp-action="DeleteConfirm" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>
